<link rel="stylesheet" href="style/login.css">
<link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300&family=Raleway:wght@300&display=swap" rel="stylesheet">
  

<form class="login" action="/login" method="post">
    <h1>Login</h1>

    <input type="text" name="email" id="" placeholder="Email"></input>
    <input type="text" name="password" id="" placeholder="Password"></input>
    <button type="submit">Login</button>

    <div class="other-auth">
        <a href="/register">Register</a>
        <a href="/reset">Forget password</a>
    </div>
</form>